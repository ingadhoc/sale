<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record model="ir.ui.view" id="account_invoice_three_discounts_form_view_inh">
        <field name="name">account.invoice.three_discounts.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.type', 'in', ('out_invoice', 'out_refund'))]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="before">
                <field name="discount1" attrs="{'column_invisible': [('parent.type', 'not in', ('out_invoice', 'out_refund'))]}" groups="product.group_discount_per_so_line" />
                <field name="discount2" attrs="{'column_invisible': [('parent.type', 'not in', ('out_invoice', 'out_refund'))]}" groups="product.group_discount_per_so_line" />
                <field name="discount3" attrs="{'column_invisible': [('parent.type', 'not in', ('out_invoice', 'out_refund'))]}" groups="product.group_discount_per_so_line" />
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree//field[@name='discount']" position="before">
                <field name="discount1" invisible="1" />
                <field name="discount2" invisible="1" />
                <field name="discount3" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>