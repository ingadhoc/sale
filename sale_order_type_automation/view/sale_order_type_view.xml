<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sot_sale_order_type_form_view" model="ir.ui.view">
            <field name="name">sale.order.type.form.view</field>
            <field name="model">sale.order.type</field>
            <field name="inherit_id" ref="sale_order_type.sot_sale_order_type_form_view"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="replace"/>
                <field name="sequence_id" position="replace"/>
                <field name="warehouse_id" position="after">
                    <field name="journal_id" domain="[('company_id', '=', company_id)]"/>
                    <field name="payment_journal_id"  domain="[('company_id', '=', company_id)]"/>
                    <field name="validate_automatically_picking" />
                    <field name="validate_automatically_invoice" attrs="{'invisible' : [('journal_id','=', False)]}"/>
                    <field name="validate_automatically_payment" attrs="{'invisible' : [('payment_journal_id','=', False)]}"/>
                </field>
                <field name="incoterm_id" position="before">
                    <field name="sequence_id" domain="[('company_id', '=', company_id)]"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
