<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="type_invoice_policy" invisible="1"/>
            </form>
            <button position="before">
                <button name="action_invoice_create_force" string="Create Invoice" type="object" class="btn-primary" attrs="{'invisible': ['|', '|', ('type_invoice_policy', '!=', 'prepaid'), ('invoice_status', '=', 'invoiced'), ('state', '!=', 'draft')]}"/>
            </button>
        </field>
    </record>
</odoo>
