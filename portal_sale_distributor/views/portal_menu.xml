    <menuitem
    id="sale_menu"
    name="Sale"
    groups="group_portal_distributor"
    />
    <menuitem
    id="sale_order"
    name="Sales Order"
    action="portal_sale.action_orders_portal"
    parent="sale_menu"
    />
